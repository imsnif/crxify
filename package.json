{
  "name": "crxify",
  "version": "1.0.0",
  "description": "Browserify plugin to bundle a chrome extension",
  "main": "index.js",
  "scripts": {
    "build": "babel ./lib -d dist",
    "watch": "babel ./lib -w -d dist",
    "test": "babel-tape-runner test/*.js"
  },
  "keywords": [
    "browserify-plugin",
    "crx",
    "chrome",
    "chromium",
    "extension"
  ],
  "author": "Aram Drevekenin",
  "license": "MIT",
  "dependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "crx": "^3.0.3",
    "happy-end": "^1.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "devDependencies": {
    "dev-null-stream": "0.0.1",
    "through2": "^2.0.0",
    "tape": "^4.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-tape-runner": "^2.0.0"
  }
}
